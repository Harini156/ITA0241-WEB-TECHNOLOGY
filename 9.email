<!DOCTYPE html>
<html>
<head>
    <title>Email Validation</title>
    <script>
        function validateEmail() {
            var email = document.getElementById("email").value;
            if (email.indexOf("@") > 0) {
                alert("Valid Email");
            } else {
                alert("Invalid Email");
            }
        }
    </script>
</head>
<body>
    <input type="text" id="email" placeholder="Enter email">
    <button onclick="validateEmail()">Validate</button>
</body>
</html>
